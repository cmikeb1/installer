upstream auth {
    server 127.0.0.1:{{auth_server_internal_port}};
}

# the nginx server instance
server {
    server_name {{auth_server_external_host}};

    listen {{auth_server_external_port}};

    location /auth/ {
        rewrite ^/auth(.*)$ $1 last;
    }

    location / {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;

{% if use_secure_http %}
      # make sure references in the body include the https protocol
      sub_filter 'http://{{auth_server_external_host}}'  'https://{{auth_server_external_host}}';
      sub_filter_once off;
      sub_filter_types *;
{% endif %}

      access_log /var/log/nginx/auth_access.log;
      proxy_pass http://auth;
      proxy_redirect off;
    }

{% if use_secure_http %}
    ssl on;
    ssl_certificate /etc/nginx/ssl/{{certificate_crt_filename}};
    ssl_certificate_key /etc/nginx/ssl/{{certificate_key_filename}};
{% endif %}
}

{% if auth_server_external_port != 80 and use_secure_http %}
server {
    server_name {{auth_server_external_host}};
    listen 80;
    listen [::]:80;
    return 301 https://$server_name$request_uri;
}
{% endif %}
