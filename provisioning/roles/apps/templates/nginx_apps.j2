server {
{% if apps_server_external_host %}
    server_name {{apps_server_external_host}};
{% endif %}

    listen {{apps_server_external_port}};

    location / {
       root {{hosting_user_home}}/apps/static;
       expires 1h;
       add_header Cache-Control "public";
    }

{% if use_secure_http %}
    ssl on;
    ssl_certificate {{nginx_home}}/ssl/{{certificate_crt_filename}};
    ssl_certificate_key {{nginx_home}}/ssl/{{certificate_key_filename}};
{% endif %}
}

{% if apps_server_external_port != 80 and http_redirect %}
server {
    server_name {{apps_server_external_host}};
    listen 80;
    listen [::]:80;
    return 301 https://$server_name$request_uri;
}
{% endif %}
